---
const { lang, places } = Astro.props as { lang: string; places: any[] };
---
<section id="places" class="scroll-mt-16 py-16 md:py-24 bg-white dark:bg-background-dark/50">
  <div class="container-max">
    <h2 class="text-3xl font-bold text-center mb-12 text-gray-900 dark:text-white">Popular Places</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {places.filter((p) => p.lang === lang).slice(0, 6).map((p) => (
        <a href={`/${lang}/places/${p.slug}`} class="bg-white dark:bg-background-dark rounded-xl shadow-md overflow-hidden group">
          {p.cover && <img class="w-full h-56 object-cover group-hover:scale-105 transition-transform duration-300" alt={p.title} src={p.cover} />}
          <div class="p-6">
            <h3 class="text-xl font-bold mb-1 text-gray-900 dark:text-white">{p.title}</h3>
            <p class="text-gray-600 dark:text-gray-400 line-clamp-2">{p.summary}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

